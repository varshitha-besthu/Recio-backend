generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  email        String   @unique
  password     String
  
  roomsCreated Room[]   @relation("UserRooms")
  roomsJoined  Room[]   @relation("RoomParticipants")
  recordings  Recording[]
}

model Room {
  id           String   @id @default(uuid())
  name         String   

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdById  String

  createdBy    User     @relation("UserRooms", fields: [createdById], references: [id])
  participants User[]   @relation("RoomParticipants")
  recordings   Recording[]
  @@unique([name, createdById])
}

model Recording {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  url       String   
  type      String   

  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])

  userId    String?  
  user      User?    @relation(fields: [userId], references: [id])
}